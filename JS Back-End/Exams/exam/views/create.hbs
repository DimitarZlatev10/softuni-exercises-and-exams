<section id="create-container">
  <div class="create-container-info">
    <h1>Create Blog</h1>
    <form action="/create" method="post">
      <label>Title:</label>
      <input name="title" type="text" id="title" value="{{post.title}}" />

      <label>Image:</label>
      <input name="image" type="text" id="image" placeholder="http://..." value="{{post.image}}" />

      <label>Content:</label>
      <textarea id="content" name="content">{{post.content}}</textarea>

      <label>Blog Category:</label>
      <input name="category" type="text" id="category" value="{{post.category}}" />

      <input type="submit" id="btn" value="POST" />
    </form>
  </div>
</section>