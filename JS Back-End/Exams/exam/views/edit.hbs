<section id="edit-container">
  <div class="edit-container-info">
    <h1>Edit Blog</h1>
    <form action="/edit/{{post._id}}" method="post">
      <label>Title:</label>
      <input name="title" type="text" id="name" value="{{post.title}}" />

      <label>Image:</label>
      <input name="image" type="text" id="image" value="{{post.image}}" />

      <label>Content:</label>
      <textarea id="content" name="content">{{post.content}}</textarea>

      <label>Blog Category:</label>
      <input
        name="category"
        type="text"
        id="catelory"
        value="{{post.category}}"
      />

      <input type="submit" id="btn" value="EDIT" />
    </form>
  </div>
</section>