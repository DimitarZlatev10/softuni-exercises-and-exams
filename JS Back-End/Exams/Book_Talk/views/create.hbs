
<section class="create-form-container">

  <form action="/create" method="post">
    <h3>Create Book Review</h3>
    <label>Title</label>
    <input type="text" name="title" class="box" id="" value="{{post.title}}" />
    <label>Author</label>
    <input type="text" name="author" class="box" id="" value="{{post.author}}"/>
    <label>Genre</label>
    <input type="text" name="genre" class="box" id="" value="{{post.genre}}" />
    <label>Stars</label>
    <input type="number" name="stars" class="box" id="" value="{{post.stars}}" />
    <label>Image</label>
    <input type="text" name="image" class="box" id="" value="{{post.image}}" />
    <label>Review</label>
    <textarea class="box" name="review">{{post.review}}</textarea>
    <input type="submit" value="Create" class="btn" />
  </form>
</section>